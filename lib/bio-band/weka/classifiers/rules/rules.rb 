$:.unshift File.dirname(__FILE__)
require 'rules_utils'

module Weka
	module Classifier
		module Rules
      java_import "weka.classifiers.rules.DecisionTable" 
      java_import "weka.classifiers.rules.DTNB"

      class DecisionTable
        include Rules_utils
        class Base < DecisionTable
          def initialize
            super
            init_rules
          end
        end
      end

      class DTNB
        include Rules_utils
        class Base < DTNB
          def initialize
            super
            init_rules
          end
        end
      end

    end
  end
end